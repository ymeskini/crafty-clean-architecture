{
  "name": "crafty",
  "version": "1.0.0",
  "description": "Clean Architecture CLI",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn type && yarn esbuild",
    "esbuild": "esbuild index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "link": "yarn build && yarn link",
    "test": "jest",
    "type": "tsc --noEmit index.ts",
    "db:migrate": "prisma migrate dev"
  },
  "bin": {
    "crafty": "dist/index.js"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.14.1",
    "commander": "^10.0.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "prisma": "^4.14.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.13.0",
    "@ymeskini/eslint-config": "^1.0.2",
    "@ymeskini/prettier-config": "^1.0.0",
    "@ymeskini/tsconfig": "^1.1.0",
    "esbuild": "^0.17.8",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "testcontainers": "^9.8.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "prisma": {
    "schema": "src/infra/prisma/schema.prisma"
  }
}
